<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/DCSB.Colors;component/Themes/MaterialDesignColor.LightBlue.Accent.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush
        x:Key="SecondaryAccentBrush"
        po:Freeze="True"
        Color="{StaticResource Accent700}" />
    <SolidColorBrush
        x:Key="SecondaryAccentForegroundBrush"
        po:Freeze="True"
        Color="{StaticResource Accent700Foreground}" />

</ResourceDictionary>